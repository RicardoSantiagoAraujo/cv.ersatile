	doi = {10.1016/S0065-2660(08)00603-2},
	pages = {67--184},
	file = {ScienceDirect Snapshot:C\:\\Users\\ricar\\Zotero\\storage\\A8JL74W5\\S0065266008006032.html:text/html},
}

