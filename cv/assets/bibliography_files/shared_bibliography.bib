	keywords = {Sexual selection, Developmental instability, Fluctuating asymmetry, Health, Meta-analysis, Quality, Stress},
	pages = {380--398},
	file = {ScienceDirect Snapshot:C\:\\Users\\ricar\\Zotero\\storage\\UKBUSGSR\\S1090513811000249.html:text/html},
